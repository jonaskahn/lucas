# Lucas Multi-Agent System Environment Variables

# LLM Provider API Keys
LUCAS_OPENAI_API_KEY=your-openai-api-key-here
LUCAS_ANTHROPIC_API_KEY=your-anthropic-api-key-here
LUCAS_GOOGLE_API_KEY=your-google-api-key-here

# Default LLM Provider (openai, anthropic, google)
LUCAS_DEFAULT_LLM_PROVIDER=openai

# Plugin Settings
LUCAS_PLUGINS_DIR=plugins/examples

# API Settings
LUCAS_API_HOST=0.0.0.0
LUCAS_API_PORT=8000

# Session Settings
LUCAS_MAX_SESSION_LENGTH=100
LUCAS_SESSION_TIMEOUT_MINUTES=30

# Debug Mode
LUCAS_DEBUG=true
